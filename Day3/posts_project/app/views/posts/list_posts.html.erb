<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

</head>
<body>
    <div class="container">
        <div class="row">
            
            <div class="col-md-8 col-md-offset-2">
                <h1>Posts list</h1>
                
                <% @Posts.each do | post | 
                    @post_id = post.post_id
                    @post_title = post.name
                    @post_content = post.post    
                %>
                    <form method="GET">
                        <div class="form-group">
                            <label for="title"> Post title 
                            <input type="text" class="form-control" value=<%=@post_title%> readonly>
                        </div>
                        
                        <div class="form-group">
                            <label for="description">Post</label>
                            <textarea readonly rows="5" class="form-control"><%=@post_content%></textarea>
                        </div>

                        <button type="submit" name="post_to_show" value=<%=@post_id%> formaction="/show_post_form" class="btn btn-outline-success my-2 my-sm-0">
                            Show
                        </button>
                        
                        <button type="submit" name="post_to_update" value=<%=@post_id%> formaction="/update_post_form" class="btn btn-outline-success my-2 my-sm-0">
                            Edit
                        </button>

                        <button type="submit" name="post_to_delete" value=<%=@post_id%> formaction="/delete_post" class="btn btn-outline-danger my-2 my-sm-0">
                            Delete
                        </button>
                    <form>
                    <br> <br>
                <% end %>

            </div>
        </div>
    </div>
</body>
  